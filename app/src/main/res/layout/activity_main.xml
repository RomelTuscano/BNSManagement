<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainlayout"
    android:background="@drawable/main_back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:id="@+id/main_titleId"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/linearLayout" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_titleId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/quick_look"
            android:id="@+id/Lookup_pic"
            android:layout_weight="0.70"
            android:layout_below="@+id/main_titleId"
            android:layout_alignStart="@+id/main_titleId"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/customer"
            android:id="@+id/Customer_pic"
            android:layout_weight="0.70"
            android:layout_alignTop="@+id/Lookup_btn"
            android:layout_alignEnd="@+id/main_titleId"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="9dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/order_pic"
            android:id="@+id/Order_pic"
            android:layout_weight="0.70"
            android:layout_below="@+id/main_titleId"
            android:layout_alignStart="@+id/main_titleId"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/shipment"
            android:id="@+id/Shipment_pic"
            android:layout_weight="0.70"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignEnd="@+id/main_titleId"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/inventory_pic"
            android:id="@+id/Inventory_pic"
            android:layout_weight="0.70"
            android:layout_below="@+id/main_titleId"
            android:layout_alignStart="@+id/main_titleId"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/supplier_pic"
            android:id="@+id/Supplier_pic"
            android:layout_weight="0.70"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_alignEnd="@+id/main_titleId"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/order_pic"
            android:id="@+id/customize_pic"
            android:layout_weight="0.70"
            android:layout_below="@+id/main_titleId"
            android:layout_alignStart="@+id/main_titleId"
            android:layout_marginRight="140dp" />

    </LinearLayout>

</RelativeLayout>
